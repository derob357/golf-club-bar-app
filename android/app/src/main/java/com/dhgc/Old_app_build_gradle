plugins {
    id 'com.android.application'
    id 'org.jetbrains.kotlin.android'
    id 'org.jetbrains.kotlin.kapt'
    id 'com.google.gms.google-services'
    id 'com.google.devtools.ksp'
}

import java.util.Properties

// ---- read local.properties safely (no quotes in the property itself) ----
def lp = rootProject.file("local.properties")
def props = new Properties()
if (lp.exists()) {
    lp.withInputStream { props.load(it) }
}
def braintreeAuth = props.getProperty("BRAINTREE_AUTH", "")

android {
    namespace "com.app.glomall"
    compileSdk 34

    defaultConfig {
        applicationId "com.app.glomall"
        minSdk 23
        targetSdk 34
        versionCode 1
        versionName "1.0"

        // your existing fields (keep if you had any)
        buildConfigField "String", "API_BASE_URL", "\"https://api.glomall.example/\""

        // <<< THIS CREATES BuildConfig.BRAINTREE_AUTH >>>
        // Value must be quoted once here (property must NOT include quotes in local.properties)
        buildConfigField "String", "BRAINTREE_AUTH", "\"${braintreeAuth}\""

        javaCompileOptions {
            annotationProcessorOptions {
                arguments = ["room.schemaLocation": "$projectDir/schemas".toString()]
            }
        }
    }

    buildFeatures {
        viewBinding true
        buildConfig true
    }

    compileOptions {
        sourceCompatibility JavaVersion.VERSION_17
        targetCompatibility JavaVersion.VERSION_17
    }
    kotlinOptions { jvmTarget = '17' }

    buildTypes {
        debug { minifyEnabled false }
        release {
            minifyEnabled true
            proguardFiles(
                    getDefaultProguardFile('proguard-android-optimize.txt'),
                    'proguard-rules.pro'
            )
        }
    }
}


apply plugin: 'com.google.gms.google-services'

kapt { correctErrorTypes = true }
dependencies {
    // --- Room Persistence Library Dependencies ---
    def room_version = "2.6.1" // You can update this to the latest stable version
    implementation "androidx.room:room-runtime:$room_version"
    implementation "androidx.room:room-ktx:$room_version" // For Coroutines support
    ksp "androidx.room:room-compiler:$room_version"

